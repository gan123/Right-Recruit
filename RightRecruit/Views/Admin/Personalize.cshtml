@{
    ViewBag.Title = "Personalize";
}

<section id="personalize-view">
    <div class="adminContainer">
        <div class="adminSection">
            <div class="field adminCategory">
                Personalize
            </div>
            <br />
            <br />
            <div class="field margin">
                <div class="left-div" style="width: 20%;">
                    <label class="boldLabel" style="margin-left: 30px;">Company Name</label>
                </div>
                <div class="left-div" style="width: 80%;">
                    <div>
                        <input type="text" class="companyAppHeader" required placeholder="My Company" />
                        <label class="mildText extraSmall">This will be used as your app header and in email communications</label>
                    </div>
                </div>
            </div>
            <div class="field margin">
                <div class="left-div" style="width: 20%;">
                    <label class="boldLabel" style="margin-left: 30px;">Logo</label>
                </div>
                <div class="left-div" style="width: 80%;">
                    <div>
                        <input type="file" />
                    </div>
                </div>
            </div>
            <div class="field margin">
                <div class="left-div" style="width: 20%;">
                    <label class="boldLabel" style="margin-left: 30px;">Callback link</label>
                </div>
                <div class="left-div" style="width: 80%;">
                    <div>
                        <input type="email" class="callbackUrl" required placeholder="http://www.talentcorner.co.in" />
                        <label class="mildText extraSmall">This will link back to your website when logo is clicked</label>
                    </div>
                </div>
            </div>
            <div class="field margin">
                <div class="left-div" style="width: 20%;">
                    <label class="boldLabel" style="margin-left: 30px;">Fav icon</label>
                </div>
                <div class="left-div" style="width: 80%;">
                    <div>
                        <input type="file" />
                    </div>
                </div>
            </div>
            <div class="field margin">
                <div class="left-div" style="width: 20%;">
                    <label class="boldLabel" style="margin-left: 30px;">Colors</label>
                </div>
                <div class="left-div" style="width: 80%;">
                    <div class="left-div">
                        <div class="left-div" style="width: 20%;">
                            <label class="mildText extraSmall">Basic</label>
                        </div>
                        <div class="left-div" style="width: 20%;">
                            <input class="basic" type="text" maxlength="6" size="6" id="basic" data-bind="value: basicColor, colorpicker: {onChange: onBasicColorChange, color: basicColor}" />
                        </div>
                    </div>
                    <div class="left-div" style="margin-top: 4px;">
                        <div class="left-div" style="width: 20%;">
                            <label class="mildText extraSmall">Mid</label>
                        </div>
                        <div class="left-div" style="width: 20%;">
                            <input class="mid" type="text" maxlength="6" size="6" id="mid" data-bind="value: midColor, colorpicker: {onChange: onMidColorChange, color: midColor}" />
                        </div>
                    </div>
                    <div class="left-div" style="margin-top: 4px;">
                        <div class="left-div" style="width: 20%;">
                            <label class="mildText extraSmall">Bold</label>
                        </div>
                        <div class="left-div" style="width: 20%;">
                            <input class="bold" type="text" maxlength="6" size="6" id="bold" data-bind="value: boldColor, colorpicker: {onChange: onBoldColorChange, color: boldColor}" />
                        </div>
                    </div>
                    <div class="left-div" style="margin-top: 4px;">
                        <div class="left-div" style="width: 20%;">
                            <label class="mildText extraSmall">Control border</label>
                        </div>
                        <div class="left-div" style="width: 20%;">
                            <input class="controlBorder" type="text" maxlength="6" size="6" id="controlBorder" data-bind="value: controlBorderColor, colorpicker: {onChange: onControlBorderColorChange, color: controlBorderColor}" />
                        </div>
                    </div>
                    <div class="left-div" style="margin-top: 4px;">
                        <div class="left-div" style="width: 20%;">
                            <label class="mildText extraSmall">Menu foreground</label>
                        </div>
                        <div class="left-div" style="width: 20%;">
                            <input class="foreground" type="text" maxlength="6" size="6" id="foreground" data-bind="value: foregroundColor, colorpicker: {onChange: onForegroundColorChange, color: foregroundColor}" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="field margin right-div">
                <input type="button" class="button cancel" style="float: right;" data-bind="command: cancelCommand" value="CANCEL" />
                <input type="button" class="button save" style="float: right;" data-bind="command: saveCommand" value="SAVE" />
            </div>
        </div>
        <div class="previewSection">
            <div class="previewHeaderDiv">PREVIEW</div>
            <div class="previewAppDiv">
                <div class="header">
                </div>
                <div class="menu-mini">
                    <ul class="menu-mini-ul">
                        <li class="menuitem-mini-li"><a class="menuLink-mini">INBOX</a></li>
                        <li class="menuitem-mini-li"><a class="menuLink-mini">CALENDAR</a></li>
                        <li class="menuitem-mini-li"><a class="menuLink-mini">CLIENTS</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    @Scripts.Render("~/bundles/personalize")
}